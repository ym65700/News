<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="SwipeToRefreshLayoutGoogle"
            android:textAllCaps="false"
            android:id="@+id/btn_swipe_to_refresh_layout_google"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_pull_to_refresh_view_phoenix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PullToRefreshViewPhoenixSun"
            android:onClick="onClick"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_pull_to_refresh_view_tellh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PullToRefreshViewTellH"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_xlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="XListView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_pull_to_refresh_view_taurus_fly_plane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PullToRefreshViewPhoenixFlyPlane"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_jelly_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="JellyRefreshMatrialDesign"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_circle_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="CircleRefreshMatrialDesign"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_water_drop_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="WaterDropListview"
            android:textAllCaps="false" />

        <!--<Button-->
            <!--android:id="@+id/btn_ultra_refresh_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:onClick="onClick"-->
            <!--android:text="UltraRefreshLayout"-->
            <!--android:textAllCaps="false" />-->

    </LinearLayout>
</ScrollView>
