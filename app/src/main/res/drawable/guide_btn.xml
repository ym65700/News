<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	//没按下状态
	<item android:state_pressed="false">
		//矩形
		<shape android:shape="rectangle">
			<!-- 填充的颜色 -->
			<solid android:color="#00bbaa"/>
			<!-- 设置按钮的四个角为弧形 -->
			<corners android:radius="180dp"/>
		</shape>
		<!-- padding：Button里面的文字与Button边界的间隔 -->

		<padding
			android:bottom="10dp"
			android:left="10dp"
			android:right="10dp"
			android:top="10dp"/>

	</item>
	//按下状态

	//没按下状态
	<item android:state_pressed="true">
		//矩形
		<shape android:shape="rectangle">
			<!-- 填充的颜色 -->
			<solid android:color="#00bbaa"/>
			<!-- 设置按钮的四个角为弧形 -->
			<corners android:radius="180dp"/>
		</shape>
		<!-- padding：Button里面的文字与Button边界的间隔 -->

		<padding
			android:bottom="10dp"
			android:left="10dp"
			android:right="10dp"
			android:top="10dp"/>

	</item>


</selector>